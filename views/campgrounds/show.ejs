<% layout('layouts/boilerplate') %>



<section>

	<div class="row">
		<div class="col-7 offset-2">
			<div class="card mb-3">
			  	<div class="card-body">
					<img src="<%= campground.image %>" class="card-img mb-3">
			    	<h1 class="card-title mb-4"><%= campground.title %> <span class="text-muted fs-4"><%= campground.location %></span></h1>
			    	<div class="accordion mb-3" id="accordionExample">
						<div class="accordion-item">
					    	<h2 class="accordion-header" id="headingOne">
					      		<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
					        		<i class="fas fa-calendar-check me-3 text-muted fs-4"></i><b>Availability</b>
					      		</button>
					    	</h2>
					    	<div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
					      		<div class="accordion-body">
					        		<strong>Start of text</strong> and rest of text.
					      		</div>
					    	</div>
					  	</div>
					  	<div class="accordion-item">
					  		<h2 class="accordion-header" id="headingTwo">
					    		<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
									<i class="fas fa-shower me-3 text-muted fs-4"></i><b>Facilities</b>
								</button>
					    	</h2>
					    	<div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
					    		<div class="accordion-body mb-2">
					        		<div class="container">
					          			<div class="row">
					          				<% for (let facs of campground.facilities) { %>
						            			<div class="col d-flex justify-content-center">
						            				<i class="<%= facs.icon %> me-3 fs-4 me-2"></i>
						            				<strong><%= facs.facility %></strong>
						            			</div>
					          				<% } %>
					          			</div>
					        		</div>
					        	</div>
					    	</div>
					  	</div>
					  	<div class="accordion-item">
					  		<h2 class="accordion-header" id="headingThree">
					    		<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
									<i class="fas fa-shower me-3 text-muted fs-4"></i><b>Member-exclusive facilities</b>
								</button>
					    	</h2>
					    	<div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
					    		<div class="accordion-body mb-2">
					        		<div class="container">
					          			<div class="row">
					          				<% for (let mFacs of campground.memberFacilities) { %>
						            			<div class="col d-flex justify-content-center">
						            				<i class="<%= mFacs.icon %> me-3 fs-4 me-2"></i>
						            				<strong><%= mFacs.facility %></strong>
						            			</div>
					          				<% } %>
					          			</div>
					        		</div>
					        	</div>
					    	</div>
					  	</div>
					</div>
					<p>Prices per night: </p>
					<p class="btn btn-primary">£<%= campground.price %></p>
					<p class="btn btn-warning">
						£<%= campground.memberPrice %> <small> for members</small>
					</p>
			    	<p class="card-text"><%= campground.description %></p>

			    	<div clas="card-body">
				    	<a class="card-link btn btn-outline-dark fw-bold mt-2" href="/campgrounds/<%= campground._id %>/edit">Edit campground</a>
					</div>
			  	</div>
			</div>
		</div>
	</div>

</section>